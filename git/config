[user]
	name = Katrin Leinweber
	email = kalei@posteo.de
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	keepBackup = true
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
	autostash = true
[core]
	protocolVersion = 2
	autocrlf = input
	excludesfile = ~/.config/git/ignore
	editor = /Applications/Sublime\\ Text.app/Contents/SharedSupport/bin/subl -n -w
	# editor = "open -W -n"
	# pager = delta --dark
	commitGraph = true
[gc]
	writecommitGraph = true
[credential]
	helper = osxkeychain
[rebase]
	autoStash = true
	autoSquash = true
	# https://twitter.com/codeinthehole/status/873210484555689988
	# instructionFormat = %s [%an]
[alias]
	last = log -1 HEAD
	ld = diff HEAD~0 HEAD~1
	cs = clone --depth=3 --no-single-branch

	# https://gist.github.com/katrinleinweber
	ad = !bash ~/.config/git/Arbeitsdreieck.sh
	dx = !bash ~/.config/git/clone-rm-dx.sh
	cran = !bash ~/.config/git/clone-cran.sh
	ft = !bash ~/.config/git/clone-fix-typo.sh

	# http://haacked.com/archive/2014/07/28/github-flow-aliases/
 	ec = config --global --edit
	up = !git pull --ff-only --prune $@ && git submodule update --init --recursive && git push
	undo = reset HEAD~1 --mixed

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[http]
	cookiefile = /Users/katrinleinweber/.gitcookies
[gpg]
	program = /usr/local/MacGPG2/bin/gpg2
