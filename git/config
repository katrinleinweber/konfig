[user]
	name = Katrin Leinweber
	email = katrin.leinweber@uni-konstanz.de
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[mergetool]
	keepBackup = true
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[core]
	excludesfile = ~/.config/git/ignore
[rebase]
	# https://twitter.com/codeinthehole/status/873210484555689988
    instructionFormat = %s [%an]

[alias]
	last = log -1 HEAD
	ld = diff HEAD~0 HEAD~1
    	cs = clone --depth=1 --no-single-branch	
	ol = git log --oneline

	# https://gist.github.com/katrinleinweber/f89a07bda89bd9f98b34a831b8c2105a
	ad = !bash ~/.config/git/Arbeitsdreieck.sh
	
	# http://haacked.com/archive/2014/07/28/github-flow-aliases/
	am = commit --all --amend
	cm = !git add --all && git commit --message
	co = checkout
	cob = checkout --branch
#	ec = config --global --edit
	ec = !nano ~/.config/git/config 
	save = !git add --all && git commit -m "SAVEPOINT"
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	undo = reset HEAD~1 --mixed
	wip = commit --all --untracked-files -m "WIP"
	wipe = !git add --all && git commit --quiet -m "WIPE SAVEPOINT" && git reset HEAD~1 --hard

	# https://www.jessesquires.com/blog/customizing-git-log/
    me = me '!git smartlog --author=Katrin Leinweber'
	sl = log --graph --pretty=format:'%C(bold red)%h %C(bold magenta)%d %Creset%n%C(bold yellow)%cr %Creset%C(yellow)(on %cd)%Creset%n%ae%n%C(cyan)%s%n%Creset'

[color]
	ui = auto
