[user]
	name = Katrin Leinweber
	email = 9948149+katrinleinweber@users.noreply.github.com
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	keepBackup = true
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
	autostash = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[core]
	excludesfile = ~/.config/git/ignore
	editor = /Applications/Sublime\\ Text.app/Contents/SharedSupport/bin/subl -n -w
	pager = diff-so-fancy | less --tabs=4 -RFX
[rebase]
	autoStash = true
	# https://twitter.com/codeinthehole/status/873210484555689988
	instructionFormat = %s [%an]
[pager]
       #diff = diff-so-fancy | less --tabs=1,5 -RFX
       #show = diff-so-fancy | less --tabs=1,5 -RFX

[alias]
	# legit
	switch = !legit switch
	sync = !legit sync
	publish = !legit publish
	unpublish = !legit unpublish
	undo = !legit undo
	branches = !legit branches

	# own
	last = log -1 HEAD
	ld = diff HEAD~0 HEAD~1
	leaf = !bash ~/.config/git/leaf.sh
	cs = clone --depth=3 --no-single-branch
	ol = git log --oneline
	cp = cherry-pick

	# https://gist.github.com/katrinleinweber
	ad = !bash ~/.config/git/Arbeitsdreieck.sh
	dx = !bash ~/.config/git/clone-rm-dx.sh
	ft = !bash ~/.config/git/clone-fix-typo.sh

	# http://haacked.com/archive/2014/07/28/github-flow-aliases/
	am = commit --all --amend
	cm = !git add --all && git commit --message
	co = checkout
	cob = checkout -b
 	ec = config --global --edit
	up = !git pull --ff-only --prune $@ && git submodule update --init --recursive && git push
	undo = reset HEAD~1 --mixed
	cu = !git branch --merged master | grep -v '^[ *]*master$' | xargs git branch -d

	# https://www.jessesquires.com/blog/customizing-git-log/
	me = !git sl --author='Katrin Leinweber'
	sl = log --graph --pretty=format:'%C(bold red)%h %C(bold magenta)%d %Creset%s'

	# https://blog.andrewray.me/a-better-git-blame/
	sb = log -p -M --follow --stat --
	
	ri = rebase --interactive
	ra = rebase --abort
	rc = rebase --continue
	rv = remote --verbose
	cane = commit --amend --no-edit
	su = stash save --include-untracked *
	sp = stash pop
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
