[user]
	name = Katrin Leinweber
	email = 9948149+katrinleinweber@users.noreply.github.com
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[mergetool]
	keepBackup = true
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[core]
	excludesfile = ~/.config/git/ignore
[rebase]
	# https://twitter.com/codeinthehole/status/873210484555689988
	instructionFormat = %s [%an]

[alias]
	last = log -1 HEAD
	ld = diff HEAD~0 HEAD~1
	leaf = !bash ~/.config/git/leaf.sh
	cs = clone --depth=3 --no-single-branch
	ol = git log --oneline

	# https://gist.github.com/katrinleinweber
	ad = !bash ~/.config/git/Arbeitsdreieck.sh
	dx = !bash ~/.config/git/clone-rm-dx.sh

	# http://haacked.com/archive/2014/07/28/github-flow-aliases/
	am = commit --all --amend
	cm = !git add --all && git commit --message
	co = checkout
	cob = checkout -b
#	ec = config --global --edit
	ec = !atom ~/.config/git/config
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	undo = reset HEAD~1 --mixed

	# https://www.jessesquires.com/blog/customizing-git-log/
	me = !git sl --author='Katrin Leinweber'
	sl = log --graph --pretty=format:'%C(bold red)%h %C(bold magenta)%d %Creset%n%C(bold yellow)%cr %Creset%C(yellow)(on %cd)%Creset%n%ae%n%C(cyan)%s%n%Creset'

[color]
	ui = auto
